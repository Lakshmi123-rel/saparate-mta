<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="scp.com.saparate.controller.Inbox"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title">
				<content>
					<Table items="{path: 'Inbox>/items'}" id="idAllInbox" alternateRowColors="true">
						<columns>
							<Column demandPopin="true" minScreenWidth="Tablet">
								<Text text="Workflow name"/>
							</Column>
							<Column demandPopin="true" >
								<Text text="Cycle name"/>
							</Column>
							
							<Column demandPopin="true" >
								<Text text="Stage name"/>
							</Column>
							
							<Column demandPopin="true" >
								<Text text="Label"/>
							</Column>
							<Column demandPopin="true" >
								<Text text="Assign to"/>
							</Column>
							<Column demandPopin="true" >
								<Text text="Task type"/>
							</Column>
							
							<Column demandPopin="true" >
								<Text text="Approve"/>
							</Column>
							<Column demandPopin="true" >
								<Text text="Reject"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active" press="doNothing">
								<cells>
									<Text text="{Inbox>releaseWorkflow}"/>
									<Text text="{Inbox>releaseCycleName}"/>
									<Text text="{Inbox>humanTask/stageName}"/>
									<Text text="{Inbox>humanTask/label}"/>
									<Text text="{Inbox>humanTask/assignedTo}"/>
									<Text text="{Inbox>humanTask/type}"/>
									
									<Button type="Accept" text="Accept"  press="onAcceptButtonPress" ></Button>
									<Button type="Reject" text="Reject" press="onRejectButtonPress" ></Button>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>