<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="scp.com.saparate.controller.Credentials"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>listOfCred}" >
				<headerContent>
					<OverflowToolbar id="idtbCredentials">
						<ToolbarSpacer/>
						<Button icon="sap-icon://two-keys" text="{i18n>registerCred}" press="onregisterCredential"/>
					</OverflowToolbar>
				</headerContent>
				<content>
					<List noDataText="{i18n>noCredentialsFound}" id="idCredentialsList" items="{Credentials>/}">
						<items>
							<StandardListItem type="Active" title="{Credentials>name}" press="editCredentialOpen" icon="sap-icon://primary-key"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>