<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<Table id="idPipeLineCycleResults" items="{Cycledetails>/items}" alternateRowColors="true" >
		<columns>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>cycles}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>triggeredBy}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>startTime}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>endTime}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Tablet">
				<Text text="{i18n>status}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press = "handleSelectionChange_releaseCycle"  highlight="{parts : [ 'Cycledetails>status'], formatter: '.formatter.CycleStatus'}" >
				<cells>
					<ObjectStatus xmlns="sap.m" text="{Cycledetails>label}" state="Information"/>
					<ObjectStatus xmlns="sap.m" text="{Cycledetails>instantiatedBy}" state="Information"/>
					<ObjectStatus xmlns="sap.m" state="Information" text="{ parts : [ 'Cycledetails>startTime'], formatter: '.formatter.getDate' }"
						icon="sap-icon://date-time"/>
					<ObjectStatus xmlns="sap.m" state="Information" text="{ parts : [ 'Cycledetails>endTime'], formatter: '.formatter.getDate' }"
						icon="sap-icon://date-time"/>
					<GenericTag text="{Cycledetails>status}" design="StatusIconHidden" status="{ parts : [ 'Cycledetails>status'], formatter: '.formatter.CycleStatus' }"/>
				</cells>
			</ColumnListItem>
		</items>
		<headerToolbar>
			<Toolbar width="100%" id="toolbar2">
				<content>
					<Bar id="bar1">
						<contentLeft>
							<Text xmlns="sap.m" id="idReleasePipelinesHdr"/>
						</contentLeft>
						<contentMiddle></contentMiddle>
						<contentRight>
							<Button xmlns="sap.m" text="{i18n>refresh}" press="refreshData" icon="sap-icon://refresh"/>
						</contentRight>
					</Bar>
				</content>
			</Toolbar>
		</headerToolbar>
	</Table>
</core:FragmentDefinition>