<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m" height="100%">
	<Dialog title="Edit/Create Credentials">
		<content>
			<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout"
				id="idCredentialform">
				<sap.ui.layout.form:content>
					<Label text="Scope"/>
					<Select selectedKey="{Data>/scope}" id="idScopeSelect_Cred">
						<core:ListItem key="GLOBAL" text="GLOBAL"/>
					</Select>
					<Label text="Credential Name"/>
					<Input width="auto" value="{Data>/name}"/>
					<Label text="User Name"/>
					<Input width="auto" value="{Data>/userName}"/>
					<Label text="Password"/>
					<Input width="auto" type="Password" value="{Data>/password}"/>
				</sap.ui.layout.form:content>
			</sap.ui.layout.form:SimpleForm>
		</content>
		<beginButton>
			<Button text="Save" press="onSaveEditCredential"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>